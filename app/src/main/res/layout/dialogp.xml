<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/dnamep"
        android:layout_width="220dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Producto"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="55dp" />

    <EditText
        android:id="@+id/dtamano"
        android:layout_width="220dp"
        android:layout_height="48dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Tamaño"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="@id/dnamep"
        tools:layout_editor_absoluteX="96dp" />

    <EditText
        android:id="@+id/ddescripcion"
        android:layout_width="220dp"
        android:layout_height="48dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Descripción"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="@id/dtamano"
        tools:layout_editor_absoluteX="96dp" />

    <EditText
        android:id="@+id/dpricep"
        android:layout_width="220dp"
        android:layout_height="48dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Precio"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="@id/ddescripcion"
        tools:layout_editor_absoluteX="96dp" />



</androidx.constraintlayout.widget.ConstraintLayout>